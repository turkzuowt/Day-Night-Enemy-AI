/////// Diffuse:
                float NdotL = dot( normalDirection, lightDirection );
                float3 diffuse = max( 0.0, NdotL) * attenColor;
                float3 finalColor = 0;
                float3 diffuseLight = diffuse;
                float2 node_12 = i.uv0;
                finalColor += diffuseLight * lerp( _Colour.rgb, tex2D(_Diffuse,TRANSFORM_TEX(node_12.rg, _Diffuse)).rgb, _ColourSwitch );
/// Final Color:
                return fixed4(finalColor * _TransValue,0);
            }
